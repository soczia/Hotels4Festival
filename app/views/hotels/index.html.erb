<h3>Listing hotels</h3>
<div class="span11">
<table class="table table-striped table-hover table-condensed">
<thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Geolocation</th>
    <th>Rooms</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
 <tbody>
<% @hotels.each do |hotel| %>
  <tr>
    <td><%= image_tag(hotel.picture_url, :width => 60) if hotel.picture.present? %></td>
    <td><%= hotel.name %></td>
    <td><%= hotel.street %></td>
    <td><%= hotel.city %></td>
    <td><%= hotel.postcode %></td>
    <td><%= hotel.geolocation %></td>
    <td><%= hotel.rooms.size %></td>
    <td><%= hotel.bookings.count %></td>
    <td>    <div class="btn-group">
        <button class="btn btn-primary">Action</button>
            <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
                <ul class="dropdown-menu">
                    <li><%= link_to 'Show', hotel %></li>
                    <li><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    <li><%= link_to 'Edit', edit_hotel_path(hotel) %>/li>
                </ul>
        </div></td>
    <td><%= link_to 'Show', hotel %></td>
    <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
    <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Hotel', new_hotel_path %>
</div>
